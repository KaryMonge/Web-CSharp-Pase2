@model Cliente_UI.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Producto_Id" class="control-label"></label>
                <input asp-for="Producto_Id" class="form-control" />
                <span asp-validation-for="Producto_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto_Descripcion" class="control-label"></label>
                <input asp-for="Producto_Descripcion" class="form-control" />
                <span asp-validation-for="Producto_Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ced_juridica" class="control-label"></label>
                <select asp-for="@Model.Ced_juridica" class="form-select" asp-items="@(new SelectList(ViewBag.Ced_juridica,"Ced_juridica","Ced_juridica"))"></select>
                <span asp-validation-for="Ced_juridica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anio_ingreso" class="control-label"></label>
                <input asp-for="Anio_ingreso" class="form-control" />
                <span asp-validation-for="Anio_ingreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilidad" class="control-label"></label>
                <input asp-for="Utilidad" class="form-control" />
                <span asp-validation-for="Utilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            </div>
        </form>
    </div>
</div>

<div>
    <div style="background-color:midnightblue">
    <a asp-action="Index">Regresar</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
