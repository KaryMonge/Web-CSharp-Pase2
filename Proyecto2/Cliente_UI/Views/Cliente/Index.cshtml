@model IEnumerable<Cliente_UI.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Inicio</h1>

<p>
   <div style="background-color:navy">
    <a asp-action="Create">Ingresar Usuario</a>
    </div>
</p>

<table class="table">
    <div class="container">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anio_Nacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lista_recomendado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anio_Nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lista_recomendado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                    <div style="background-color:black">
                @Html.ActionLink("Edit", "Edit", new { Cedula = item.Cedula }) |
                    @Html.ActionLink("Details", "Details", new {Cedula = item.Cedula }) |
                    @Html.ActionLink("Delete", "Delete", new { Cedula = item.Cedula })
                        </div>
            </td>
        </tr>
            }

    </tbody>
</table>
