@model Cliente_UI.Models.Tour

@{
    ViewData["Title"] = "Create";
}

<h1>Ingresar tour</h1>

<h4>Tour</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class=" container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tour_Id" class="control-label"></label>
                <input asp-for="Tour_Id" class="form-control" />
                <span asp-validation-for="Tour_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tour_Descripcion" class="control-label"></label>
                <input asp-for="Tour_Descripcion" class="form-control" />
                <span asp-validation-for="Tour_Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tour_Imagen" class="control-label"></label>
                <input asp-for="Tour_Imagen" class="form-control" />
                <span asp-validation-for="Tour_Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ced_juridica" class="control-label"></label>
                <select asp-for="@Model.Ced_juridica" class="form-select" asp-items="@(new SelectList(ViewBag.Ced_juridica,"Ced_juridica","Ced_juridica"))"></select>
                <span asp-validation-for="Ced_juridica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dias_disponibles" class="control-label"></label>              
                <select asp-for="@Model.Dias_disponibles" class="form-select" asp-items="@(new SelectList(ViewBag.Week_list,"Dias_disponibles","Dias_disponibles"))"></select>
                <span asp-validation-for="Dias_disponibles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            </div>
        </form>
    </div>
</div>

<div>
    <div style="background-color:navy">
    <a asp-action="Index">Regresar</a>
        <div style="background-color:navy">

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
